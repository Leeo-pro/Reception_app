<% provide(:title, "拠点登録") %>

<h1>拠点登録</h1>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <%= form_with(model: @reservation, url: user_reservations_path(@user), local: true) do |f| %>

        <%= f.label :"拠点名" %>
        <%= f.text_field :name, class: "form-control" %><br>

        <%= f.label :"営業日（営業日にチェック）" %>
        <div class="field">
          <% $days_of_the_week.each.with_index do |day,i| %>
            <label>
            <%= f.check_box :day, {multiple: true}, day ,nil %>
            <%= day %>
            </label>
          <% end %>
        </div>
　　　　

          <div class="form-group">
            <%= f.label :str_time %>
            <%= f.time_select :str_time, { include_blank: true, minute_step: 60 } %>
            <%= f.label :fin_time %>
            <%= f.time_select :fin_time, { include_blank: true, minute_step: 60 } %>
          </div>

        <%= f.submit "登録", class: "btn btn-primary btn-block btn-new-appointment" %>
      <% end %>
    </div>
  </div>
</div>
