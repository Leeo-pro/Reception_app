<% provide(:class_text, 'area-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">拠点情報編集</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @reservation, url: update_area_info_user_reservation_path(@user, @reservation), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @reservation %>
          
            <%= f.label :name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :name, class: "form-control" %>
            
            <%= f.label :day, class: "label-#{yield(:class_text)}" %>
            <div class="field">
              <% $days_of_the_week.each.with_index do |day,i| %>
                <label>
                <%= f.check_box :day, {multiple: true}, day ,nil %>
                <%= day %>
                </label>
              <% end %>
            </div>
            
            <%= f.label :str_time %>
            <%= f.time_select :str_time, { include_blank: true, minute_step: 60 } %>
            
            <%= f.label :fin_time %>
            <%= f.time_select :fin_time, { include_blank: true, minute_step: 60 } %>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル              
              </button>
            </div>
          <% end %>
        </div>
      </div>      
    </div>
  </div>
</div>