<% provide(:title, 'NEWS') %>
<h1>関連ニュース　登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: [@user, @article], local: true) do |f| %>
      <%= f.label :"ニュース", class: "label-news" %>
      <%= f.text_field :memo, class: "form-control" %>
      <%= collection_check_boxes(:article, :category, Category.all, :id, :name) %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-news" %>
    <% end %>
  </div>
</div>